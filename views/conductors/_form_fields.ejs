<div class="form-row">
  <div class="form-item">
    <label>Name</label>
    <input type="text" name="name" value="<%= conductor.name %>">
  </div>
  <div class="form-item">
    <label>Drivers</label>
    <select name="driver">
      <% drivers.forEach(driver => { %>
        <% if (driver.iddriver === conductor.iddriver) { %>
          <option selected label="<%= driver.name %>" value="<%= driver.iddriver %>">
        <% } else { %>
          <option label="<%= driver.name %>" value="<%= driver.iddriver %>">
        <% } %>
      <% }) %>
    </select>
  </div>

</div>
