<%- include('../partials/header.ejs') %>
<div class="inner-container">
    <%- include('../partials/errorMessage.ejs') %>
    <%- include('../partials/greeting.ejs') %>
  
    <h2 class="page-header">Edit Passanger</h2>
    <form action="/passangers/<%= passanger.idpassanger %>?_method=PUT" method="POST">
      <div class="form-row">
        <div class="form-item">
          <label>Name</label>
          <input type="text" name="name" value="<%= passanger.name %>">
        </div>
      </div>
      <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/passangers/<%= passanger.idpassanger %>">
          <img src="../images/highlight_off_black_36dp.svg" alt="cancel" />
        </a>
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </form>
    
  </div>
  
  