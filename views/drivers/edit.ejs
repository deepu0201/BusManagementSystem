<%- include('../partials/header.ejs') %>
<div class="inner-container">
  <%- include('../partials/errorMessage.ejs') %>
  <%- include('../partials/greeting.ejs') %>

  <h2 class="page-header">Edit Driver</h2>
  <form action="/drivers/<%= driver.iddriver %>?_method=PUT" method="POST">
    <div class="form-row">
      <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= driver.name %>">
      </div>
    </div>
    <div class="form-row form-row-end btn-row">
      <a class="btn btn-danger" href="/drivers/<%= driver.iddriver %>">
        <img src="../images/highlight_off_black_36dp.svg" alt="cancel" />
      </a>
      <button class="btn btn-primary" type="submit">Update</button>
    </div>
  </form>
  
</div>

